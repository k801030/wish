<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= title %></title>
  <script src="/js/angular.min.js"></script>
  <script src="/js/data-handler.js"></script>
  <link rel='stylesheet' href='/css/bootstrap.css'/>
  <link rel='stylesheet' href='/css/style.css' />

</head>
<body ng-app="data-handler" >
  <h1><%= title %></h1>
  <p>Welcome to <%= title %></p>
  <div ng-controller="CreateController">
    <form ng-submit="create()">
      <div class="form-group">
        <input class="form-control" placeholder="name" ng-model="data.name">
      </div>
      <div class="form-group">
        <input class="form-control" placeholder="school id" g-model="data.id">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
    {{data}}
  </div>
  
  <div ng-controller="ReadController">
    <button class="btn btn-default" ng-click="read()">Read</button>
  </div>

</body>
</html>
